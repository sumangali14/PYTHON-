star=int(input("enter the no.of stars"))
block=int(input("enter the no.of blocks"))
line=int(input("enter the no.of lines"))
for i in range(block):
    count=0
    for j in range(line - i):
        for k in range(star):
            print("*",end=" ")
            count=count+1
        print()
    print(count)
    print("_____________")
